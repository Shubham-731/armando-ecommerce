{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "email": {
      "type": "email",
      "required": true
    },
    "orderId": {
      "type": "uid",
      "required": true,
      "minLength": 5
    },
    "paymentInfo": {
      "type": "json"
    },
    "products": {
      "type": "json",
      "required": true
    },
    "address": {
      "type": "text",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "transactionId": {
      "type": "string"
    },
    "amount": {
      "type": "integer",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "placed",
        "delivered"
      ],
      "default": "pending",
      "required": true
    }
  }
}

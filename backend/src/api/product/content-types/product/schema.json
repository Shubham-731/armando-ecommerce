{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 80,
      "minLength": 5
    },
    "description": {
      "type": "text",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "all categories",
        "books",
        "clothings",
        "electronics",
        "furnitures",
        "computer & accessories"
      ],
      "default": "all categories",
      "required": true
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "stock": {
      "type": "integer",
      "required": true
    }
  }
}
